{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@components/*": [
        "components/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "app",
    "lib",
    "components"
  ],
  "exclude": [
    "node_modules",
    "export_chat",
    "ingestion",
    "dist",
    "build"
  ]
}
